<h1>New List</h1>
<% if @list.errors.any? %>
  <h3>There were errors. Try again:</h3>
  <ul>
    <% @list.errors.full_message.each do |message| %>
    <li><%= message %></li>
  </ul>
<% end %>
<% form_for @list do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit %>
<% end %>
